<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".NoHouseholdActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/appbar_no_household"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#B8B8FF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Create/Join Household"
        app:titleTextColor="@android:color/background_light">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/text_enter_invite_code"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:gravity="left|center_vertical|center"
            android:text="Enter Invite Code:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edit_invite_code"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:hint="Invite Code"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_join_household"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner_button_color_white"
            android:text="Join"
            android:textColor="#4d4dce" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="bottom|right"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_create_household"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#4d4dce"
            android:text="Create Household"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>